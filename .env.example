# RiffRag Configuration
# Copy this file to .env and customize as needed

# Ollama Settings
OLLAMA_HOST=http://localhost:11434

# Embedding Model
# Options: mxbai-embed-large, nomic-embed-text, snowflake-arctic-embed, etc.
# Make sure the model is pulled: ollama pull <model-name>
EMBEDDING_MODEL=mxbai-embed-large

# Embedding Dimension (AUTO-DETECTED from model)
# The dimension is automatically detected from Ollama
# Only uncomment to manually override if auto-detection fails:
# EMBEDDING_DIMENSION=1024

# Use Embedding Prefixes
# Set to true for nomic-embed-text (required for best results)
# Set to false for mxbai-embed-large (prefixes hurt performance)
# Default: false
USE_EMBEDDING_PREFIXES=false

# Indexing Settings
BATCH_SIZE=10
MAX_FILE_SIZE_BYTES=1048576

# Query Settings
DEFAULT_SEARCH_LIMIT=3
SIMILARITY_THRESHOLD=0.001

# Logging
LOG_LEVEL=INFO
